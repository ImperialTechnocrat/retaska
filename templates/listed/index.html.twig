{% extends 'base.html.twig' %}

{% block title %}Hello AllProductController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>List of products</h1>

        List of products:
        <ul>
            <li>Homepage <code><a href="{{ path('homepage') }}">{{ path('homepage') }}</a></code></li>
        </ul>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Show</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>
                        <a href="{{ path('listed_show', {'id': product.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('homepage') }}">Back to homepage</a>

    </div>
{% endblock %}
